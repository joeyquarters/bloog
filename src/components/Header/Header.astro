---
import Navigation from "../Navigation.astro"
import SkipLink from "./SkipLink.astro";

type Props = Record<string, never>;
---
<header>
  <SkipLink />
  <div class="container header-inner">
    <a href="/" class="logo">
      Joey's Blog
    </a>
    <Navigation />
  </div>
</header>
<style>
  .header-inner {
    align-items: flex-start;
    border-bottom: 1px solid var(--color-border);
    display: flex;
    justify-content: space-between;
    position: relative;
    padding: 1rem;
  }

  .logo {
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 600;
    padding: 0.25rem 0;
    position: absolute;
    white-space: nowrap;
  }

  @media (min-width: 40rem) {
    .header-inner {
      padding: 2rem 1rem;
    }

    .logo {
      position: static;
    }
  }
</style>

